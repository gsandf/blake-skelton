{
  "private": true,
  "scripts": {
    "format": "npx prettier-eslint-cli --write 'packages/**/*.js'",
    "start:effects": "DISPLAY=:0 cd packages/fortune-teller && yarn start",
    "start:speech": "DISPLAY=:0 run-p start:fortune-teller start:distance-trigger",
    "start:speech:fast": "DISPLAY=:0 run-p start:effects start:distance-trigger",
    "start:distance-trigger": "wait-port 4000 && cd packages/distance-trigger && sudo node .",
    "start:fortune-teller": "cd packages/speech-recognition && yarn build && cd ../fortune-teller && yarn start"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "wait-port": "^0.2.2"
  }
}
